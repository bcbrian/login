<!-- views/profile.ejs -->
extends layout

block content
	div.container
		.page-header.text-center
			h1
				span.fa.fa-anchor Profile Page
			a.btn.btn-default.btn-sm(href="/logout") Logout

		.row

			<!-- LOCAL INFORMATION -->
			.col-sm-6
				.well
					h3
						span.fa.fa-user 
						| Local
					p
						strong id
						|: #{user._id}
					p
						strong email
						|: #{user.local.email}
					p
						strong password
						|: #{user.local.password}
			.col-sm-6
				.well
					h3.text-primary
						span.fa.fa-facebook 
						|  Facebook
					if user.facebook.id
						p
							strong FBid
							|: #{user.facebook.id}
						p
							strong FBtoken
							|: #{user.facebook.token}
						p
							strong FBemail
							|: #{user.facebook.email}
						p
							strong FBname
							|: #{user.facebook.name}
						p
							a.btn.btn-primary(href="/unlink/facebook") Unlink
					else
						p You should connect your Facebook account.
						p
							a.btn.btn-primary(href="/connect/facebook") Connect Facebook
		.row
			.col-sm-6
				.well
					h3.text-info
						span.fa.fa-twitter
						|  Twitter
					if user.twitter.id
						p
							strong Tid
							|: #{user.twitter.id}
						p
							strong Ttoken
							|: #{user.twitter.token}
						p
							strong Tusername
							|: #{user.twitter.username}
						p
							strong TdisplayName
							|: #{user.twitter.displayName}
						p
							a.btn.btn-info(href="/unlink/twitter") Unlink
					else
						p You should connect your Twitter account.
						p
							a.btn.btn-info(href="/connect/twitter") Connect Twitter
			.col-sm-6
				.well
					h3.text-danger
						span.fa.fa-google
						|  Google+
					if user.google.id
						p
							strong Gid
							|: #{user.google.id}
						p
							strong Gtoken
							|: #{user.google.token}
						p
							strong Gemail
							|: #{user.google.email}
						p
							strong Gname
							|: #{user.google.name}
						p
							a.btn.btn-danger(href="/unlink/google") Unlink
					else
						p You should connect your Google account.
						p
							a.btn.btn-danger(href="/connect/google") Connect Google+